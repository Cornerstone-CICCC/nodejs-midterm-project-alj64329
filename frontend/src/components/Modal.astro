const today = new Date();
const year = today.getFullYear();
const month = today.getMonth() + 1;
const date = today.getDate();
const todayStr = `${year}-${month < 10 ? `0${month}` : `${month}`}-${date}`;
console.log(todayStr);
---

<div class="modal-overlay">
  <div class="modal-box">
    <div class="icon-container d-flex justify-content-end">
      <i class="fa-solid fa-xmark close-icon"></i>
    </div>
    <form id="transaction-form" class="d-flex flex-column gap-3">
      <div class="heading-text">Please enter transaction detail</div>
      <div class="d-flex justify-content-around p">
        <div class="d-flex flex-row gap-2">
          <input type="radio" name="type" id="expense" value="expense" />
          <label for="expense">Expense</label>
        </div>
        <div class="d-flex flex-row gap-2">
          <input type="radio" name="type" id="income" value="income" />
          <label for="income">Income</label>
        </div>
      </div>
      <div class="d-flex flex-column">
        <label for="name">Payment To/From</label>
        <input type="text" name="name" id="name" required />
      </div>
      <div class="category-div">
        <label for="category">Category</label>
        <select name="category" id="category">
          <option value="null"></option>
          <option value="housing">Housing</option>
          <option value="transportation">Transportation</option>
          <option value="entertainment">Entertainment</option>
          <option value="insurance">Insurance</option>
          <option value="groceries">Groceries</option>
          <option value="clothing">Clothing</option>
          <option value="others">Others</option>
        </select>
      </div>
      <div class="d-flex flex-column">
        <label for="amount">Amount</label>
        <input type="number" name="amount" id="amount" step="0.01" required />
      </div>
      <div class="d-flex flex-column">
        <label for="date">Payment Date</label>
        <input type="date" name="date" id="date" value={todayStr} required />
      </div>

      <button class="btn btn-add" type="submit">Add Transaction</button>
      <button class="btn btn-update" type="submit">Update</button>
    </form>
  </div>
</div>

<script>
  import { renderHighlight } from "../lib/highlight.util";
  import { renderTransaction } from "../lib/util";
  const modalContainer = document.querySelector(
    ".modal-overlay"
  ) as HTMLDivElement;
  const transactionForm = modalContainer.querySelector(
    "#transaction-form"
  ) as HTMLFormElement;
  //modal close
  const iconDiv = modalContainer.querySelector(".close-icon") as HTMLElement;

  iconDiv.addEventListener("click", () => {
    modalContainer.classList.remove("active");
    transactionForm.reset();
  });

  transactionForm
    .querySelector("input[id='expense']+label")
    ?.addEventListener("click", () => {
      transactionForm.querySelector(".category-div")?.classList.add("active");
    });
  transactionForm
    .querySelector("input[id='income']+label")
    ?.addEventListener("click", () => {
      transactionForm
        .querySelector(".category-div")
        ?.classList.remove("active");
    });

  //form submission event
  transactionForm.addEventListener("submit", async (e) => {
    e.preventDefault();
    const btn = e.submitter as HTMLButtonElement;

    const formData = new FormData(transactionForm);
    const type = formData.get("type");
    const name = formData.get("name");
    const category = formData.get("category");
    const amount = formData.get("amount");
    const date = formData.get("date");

    if (btn.classList.contains("btn-add")) {
      try {
        const res = await fetch("http://localhost:3500/transactions", {
          method: "POST",
          credentials: "include",
          headers: {
            "Content-type": "application/json",
          },
          body: JSON.stringify({
            type,
            name,
            category,
            amount,
            date,
          }),
        });
        const data = await res.json();
        if (!res.ok) {
          console.log(data.message);
          return;
        }
        alert("Transaction added");
        transactionForm.reset();
        modalContainer.classList.remove("active");
        await renderTransaction();
        await renderHighlight();
      } catch (err) {
        console.log(err);
      }
    } else {
      //update - id is attached to update button
      try {
        const id = btn.dataset.id;
        if (!id) return;
        const res = await fetch(`http://localhost:3500/transactions/${id}`, {
          method: "PUT",
          credentials: "include",
          headers: {
            "Content-type": "application/json",
          },
          body: JSON.stringify({
            type,
            name,
            category,
            amount,
            date,
          }),
        });
        const data = await res.json();
        if (!res.ok) {
          console.log(data.message);
          return;
        }
        alert("Transaction updated");
        transactionForm.reset();
        modalContainer.classList.remove("active");
        await renderTransaction();
        await renderHighlight();
      } catch (err) {
        console.log(err);
      }
    }
  });
</script>

<style>
  label {
    font-weight: bold;
    font-size: 14px;
    padding: 0.3rem 1.3rem;
    border-radius: 15px;
  }

  input[type="text"],
  input[type="number"],
  input[type="date"],
  select {
    background-color: #f3f1f1;
    border: none;
    padding: 0.5rem;
    font-size: 14px;
    font-weight: bolder;
    width: 95%;
    margin: 0 auto;
  }

  input[type="radio"] ~ label {
    opacity: 0.5;
    font-size: 16px;
    cursor: pointer;
  }

  i {
    font-size: 26px;
    cursor: pointer;
  }

  .icon-container {
    padding-bottom: 1.5rem;
  }

  .heading-text {
    padding-bottom: 1.3rem;
    margin: 0 auto;
    font-size: 20px;
    font-weight: bold;
  }

  input[type="radio"] {
    opacity: 0;
    width: 0;
    height: 0;
  }

  input[type="radio"]:checked ~ label {
    background-color: black;
    opacity: 1;
    color: white;
  }
</style>
